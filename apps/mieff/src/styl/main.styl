@media screen and (max-width: 840px)
	@import 'mobile/_main.styl'

.content_block
	margin-top 50px

.video_block
	background-color #00c641
	border-top 0
	border-bottom 0
	border-left 25px
	border-right 25px
	border-style solid
	border-color #c8c8c8
	box-sizing border-box
	video
		width 100%

.program_block
	background-color #ff3333
	.program_title
		text-align center
		background-color black
		color #c8c8c8
		font-size 30pt
		line-height 20pt
		font-family 'Panamatica Regular'
		text-transform uppercase
		padding-top 20px
		padding-bottom 20px
		border-top 0
		border-bottom 0
		border-left 25px
		border-right 25px
		border-color #00c641
		border-style solid
		box-sizing border-box
	.program_nanv
		padding 25px
		margin 25px
		background-color black
		color #c8c8c8
		.nav_column
			margin-bottom 10px
			&:last-child
				margin-bottom 0
			.nav_items
				display inline-block
			.nav_all
			.nav_item
				cursor pointer
				margin 10px
				display inline-block
				font-size 14pt
				line-height 16pt
				font-family 'Panama Regular'
				&:hover
				&.active
					color #00c641
			.nav_all
				margin 0
				padding 10px
				color black
				background-color #00c641
				&:hover
					color #c8c8c8
					background-color #ff3333


.program_events
	margin 25px
	margin-bottom 0
	.event_item
		color #c8c8c8
		font-size 14pt
		line-height 16pt
		text-decoration none
		.event_cover
			position relative
			.cover_marker
				font-family 'Pragmatica Book'
				color black
				text-transform uppercase
				background-color #ff3333
				position absolute
				padding 5px
				padding-bottom 2px
				right 10px
				top 10px
			.cover_title
			.cover_image
				width 100%
				display block
				border-radius 8px
				background-color black
				box-shadow: 0 0 10px rgba(0,0,0,1);
			.cover_title
				font-family 'Panamatica Regular'
				text-transform uppercase
				font-size 22pt
				line-height 24pt
				text-align center
				padding-top 62px
				padding-bottom 58px
				hyphens auto
			.cover_buy
				border-radius 0 0 8px 8px
				font-family 'Panama Regular'
				text-transform uppercase
				display none
				background-color #00c641
				color black
				text-align center
				box-sizing border-box
				padding 10px
				width 100%
				position absolute
				bottom 0
				cursor pointer
				&:hover
					background-color #c8c8c8
					color #ff3333
		&:hover .cover_buy
			display block
		.event_schedule
			margin-top 15px
			font-family 'Panama Regular'
			display flex
			.schedule_date
				&:after
					display inline-block
					margin-left 5px
					margin-right 5px
					content ' | '
		.event_program
			font-family 'Panama Regular'
			margin-top 5px
		.event_title
			margin-top 5px
			font-family 'Pragmatica Book'
			text-transform uppercase








