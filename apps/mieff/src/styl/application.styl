.content_block
	background-color #c8c8c8

.application_main_title
	text-align center
	background-color #ff3333
	color black
	font-size 22pt
	line-height 24pt
	font-family 'Panamatica Regular'
	text-transform uppercase
	padding-top 12px
	padding-bottom 10px
	border-top 0
	border-bottom 0
	border-left 25px
	border-right 25px
	border-color black
	border-style solid
	box-sizing border-box

.application_intro
	border-top 0
	border-bottom 0
	border-left 25px
	border-right 25px
	border-color #00c641
	border-style solid
	box-sizing border-box
	.intro_inner
		width 100%
		max-width 800px
		margin 0 auto
		font-family 'Panama Regular'
		font-size 16pt
		line-height 18pt

.application_forms
	border-top 0
	border-bottom 0
	border-left 25px
	border-right 25px
	border-color #00c641
	border-style solid
	box-sizing border-box
	form
		width 100%
		max-width 800px
		margin 0 auto
		.form_title
			width 100%
			padding-top 40px
			margin-bottom 5px
			font-family 'Pragmatica Book'
			font-size 16pt
			line-height 18pt
		.form_value
			display block
			outline none
			border none
			padding 5px
			padding-left 15px
			padding-right 15px
			box-sizing border-box
			background-color black
			color #00c641
			width 100%
			font-family 'Panama Regular'
			font-size 16pt
			line-height 18pt
		textarea.form_value
			min-height 200px

	.form_submit
		.submit_button
			text-transform uppercase
			max-width 800px
			width 100%
			display block
			margin 0 auto
			background-color #00c641
			text-align center
			padding 10px
			text-decoration none
			color black
			font-family 'Panamatica Regular'
			font-size 16pt
			line-height 18pt
			cursor pointer
			margin-top 40px
		.submit_confirm
			margin-top 10px
			padding-bottom 40px
			font-family 'Panama Regular'
			font-size 14pt

