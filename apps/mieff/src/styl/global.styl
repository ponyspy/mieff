@import '_fonts.styl'
@media screen and (max-width: 840px)
	@import 'mobile/_global.styl'

html
	background-color black;

body
	margin 0
	padding 0
	background-color black
	// font-smoothing: antialiased;
	// -moz-osx-font-smoothing: grayscale;
	&.bw_filter
		.title_block, .content_block, .footer_block
			filter: grayscale(100%)
	&.stop_scroll
		height 100%
		overflow hidden

.content_block
	margin-top 50px

.widget_block
	position fixed
	top 0
	left 0
	width 100%
	height 100%
	background-color rgba(0, 0, 0, 0.8)
	display none
	z-index 99999999999999
	&.open
		display block
	#pn_widget
		display none
		position fixed
		max-width 800px
		width 100%
		height 600px
		top 0; left 0; right 0; bottom 0;
		margin auto
		&.show
			display block

.title_block
	z-index 9999
	border-top 0
	border-bottom 0
	border-left 25px
	border-right 25px
	border-color #00c641
	border-style solid
	box-sizing border-box
	position fixed
	width 100%
	top 0
	left 0
	background-color black
	display flex
	justify-content space-between
	align-items center
	a
		font-family 'Panama Regular'
		color #c8c8c8
		text-decoration none
		font-size 14pt
		line-height 16pt
		&:hover
			color #00c641
	.logo_block
		// background-color grey
		flex 1
		img
			display block
			box-sizing border-box
			height 50px
			padding 2px
	.menu_block
		// background-color red
		// min-width 800px
		max-width 1000px
		display flex
		flex 6
		align-items center
		justify-content space-between
		// margin-left 5%
		// margin-right 5%
		// a
		// 	margin-left 10px
		// 	margin-right 10px
	.menu_drop
		display none
		width 30px
		height 40px
		margin 0 auto
		position absolute
		top 9px; left 0; right 0
		z-index 999999
		transform rotate(0deg)
		transition .5s ease-in-out
		cursor pointer
		span
			display block
			position absolute
			height 3px
			width 100%
			background #c8c8c8
			opacity 1
			left 0
			transform rotate(0deg)
			transition .25s ease-in-out
		span:nth-child(1)
			top 0px
		span:nth-child(2)
		span:nth-child(3)
			top 10px
		span:nth-child(4)
			top 20px
		&.open
			span:nth-child(1)
				top 10px
				width 0%
				left 50%
			span:nth-child(2)
				transform rotate(45deg)
			span:nth-child(3)
				transform rotate(-45deg)
			span:nth-child(4)
				top 10px
				width 0%
				left 50%

	.locale_block
		// background-color green
		flex 1
		padding-right 20px
		text-align right
		font-family 'Panama Regular'

	.bw_block
		// flex 1
		padding-right 20px
		text-align right
		font-family 'Panama Regular'
		color #c8c8c8
		text-decoration none
		font-size 14pt
		line-height 16pt
		cursor pointer
		&:hover
			color #00c641


.support_block
	text-align center
	background-color #c8c8c8
	padding-top 12px
	padding-bottom 10px
	border-top 0
	border-bottom 0
	border-left 25px
	border-right 25px
	border-color black
	border-style solid
	box-sizing border-box
	a
		font-size 22pt
		line-height 24pt
		font-family 'Panamatica Regular'
		text-transform uppercase
		text-decoration none
		color black
		&:hover
			color #ff3333


.mailing_block
	padding-top 12px
	padding-bottom 10px
	padding-left 20px
	padding-right 20px
	border-top 0
	border-bottom 0
	border-left 25px
	border-right 25px
	border-color #c8c8c8
	border-style solid
	box-sizing border-box
	background-color #00c641
	.mailing_title
		text-align center
		font-size 22pt
		line-height 24pt
		font-family 'Panamatica Regular'
		text-transform uppercase
	.mailing_desc
		font-size 14pt
		font-family 'Panama Regular'
		text-align center
		max-width 400px
		margin 20px auto
	.mailing_form
		margin-top 40px
		margin-bottom 10px
		form
			text-align center
			.email
				max-width 340px
				width 100%
				border-radius 0
				border none
				margin 0
				padding 0
				outline none
				padding 10px
				font-size 14pt
				font-family 'Panama Regular'
				margin-right 10px
			.submit
				border-radius 0
				cursor pointer
				border none
				margin 0
				padding 0
				padding 10px
				background-color black
				color #c8c8c8
				font-size 14pt
				font-family 'Panama Regular'
				&:hover
					color #00c641


.partners_types
	.partner_type
		.type_title
			text-align center
			color #c8c8c8
			background-color #ff3333
			font-size 22pt
			line-height 24pt
			font-family 'Panamatica Regular'
			text-transform uppercase
			padding-top 12px
			padding-bottom 10px
			border-top 0
			border-bottom 0
			border-left 25px
			border-right 25px
			border-color black
			border-style solid
			box-sizing border-box
		.type_list
			background-color #c8c8c8
			text-align center
			padding-top 40px
			// padding-bottom 40px
			border-top 0
			border-bottom 0
			border-left 25px
			border-right 25px
			border-color #ff3333
			border-style solid
			box-sizing border-box
			.list_inner
				max-width 800px
				margin 0 auto
				text-align center
				.partner_item
					display inline-block
					text-align center
					margin-left 20px
					margin-right 20px
					margin-bottom 40px
					width 25%
					.partner_logo
						width 100%
						padding-top 80%
						background-size contain
						background-position center
						background-repeat no-repeat


.social_block
	background-color black
	padding-top 20px
	padding-bottom 20px
	border-top 0
	border-bottom 0
	border-left 25px
	border-right 25px
	border-color #00c641
	border-style solid
	box-sizing border-box
	display flex
	justify-content center
	a
		margin-left 3%
		margin-right 3%
		color #c8c8c8
		text-decoration none
		font-size 12pt
		font-family 'Panama Regular'
		&:hover
			color #00c641

