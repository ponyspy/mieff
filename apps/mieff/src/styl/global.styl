@import '_fonts.styl'
@media screen and (max-width: 840px)
	@import 'mobile/_global.styl'

body
	margin 0
	padding 0
	// font-smoothing: antialiased;
	// -moz-osx-font-smoothing: grayscale;
	&.stop_scroll
		height 100%
		overflow hidden

.title_block
	z-index 1
	border-top 0
	border-bottom 0
	border-left 20px
	border-right 20px
	border-color #00c641
	border-style solid
	box-sizing border-box
	position fixed
	width 100%
	top 0
	left 0
	background-color black
	display flex
	justify-content space-between
	align-items center
	a
		font-family 'Panama Regular'
		color #c8c8c8
		text-decoration none
		font-size 14pt
		line-height 16pt
		&:hover
			color #00c641
	.logo_block
		flex 1
		img
			height 45px
	.menu_block
		flex 2
		display flex
		justify-content space-between
	.locale_block
		flex 1
		margin-right 20px
		text-align right
		font-family 'Panama Regular'


.support_block
	text-align center
	background-color #c8c8c8
	padding-top 20px
	padding-bottom 20px
	border-top 0
	border-bottom 0
	border-left 20px
	border-right 20px
	border-color black
	border-style solid
	box-sizing border-box
	a
		font-size 30pt
		line-height 20pt
		font-family 'Panamatica Regular'
		text-transform lowercase
		text-decoration none
		color black
		&:hover
			color #ff3333


.mailing_block
	padding-top 20px
	padding-bottom 20px
	padding-left 20px
	padding-right 20px
	border-top 0
	border-bottom 0
	border-left 20px
	border-right 20px
	border-color #c8c8c8
	border-style solid
	box-sizing border-box
	background-color #00c641
	.mailing_title
		text-align center
		font-size 30pt
		line-height 20pt
		font-family 'Panamatica Regular'
		text-transform lowercase
	.mailing_desc
		font-size 14pt
		font-family 'Panama Regular'
		text-align center
		max-width 400px
		margin 20px auto
	.mailing_form
		margin-top 40px
		margin-bottom 10px
		form
			text-align center
			.email
				border-radius 0
				border none
				margin 0
				padding 0
				outline none
				padding 10px
				font-size 14pt
				font-family 'Panama Regular'
				margin-right 10px
			.submit
				border-radius 0
				cursor pointer
				border none
				margin 0
				padding 0
				padding 10px
				background-color black
				color #c8c8c8
				font-size 14pt
				font-family 'Panama Regular'
				&:hover
					color #00c641


.social_block
	background-color black
	padding-top 20px
	padding-bottom 20px
	border-top 0
	border-bottom 0
	border-left 20px
	border-right 20px
	border-color #00c641
	border-style solid
	box-sizing border-box
	display flex
	justify-content center
	a
		margin-left 3%
		margin-right 3%
		color #c8c8c8
		text-decoration none
		font-size 12pt
		font-family 'Panama Regular'
		&:hover
			color #00c641

