@media screen and (max-width: 840px)
	@import 'mobile/_program.styl'

.content_block
	background-color #ff3333


.program_main_title
	text-align center
	color #c8c8c8
	background-color black
	font-size 22pt
	line-height 24pt
	font-family 'Panamatica Regular'
	text-transform uppercase
	padding-top 12px
	padding-bottom 10px
	border-top 0
	border-bottom 0
	border-left 25px
	border-right 25px
	border-color #ff3333
	border-style solid
	box-sizing border-box


.program_cover
	width 100%
	border-top 0
	border-bottom 0
	border-left 25px
	border-right 25px
	border-color #c8c8c8
	border-style solid
	box-sizing border-box
	width 100%
	padding-top 40%
	position relative
	background-size cover
	background-position center
	background-repeat no-repeat


.program_description
	padding-left 25px
	padding-right 25px
	border-top 0
	border-bottom 0
	border-left 25px
	border-right 25px
	border-color #c8c8c8
	border-style solid
	box-sizing border-box
	font-size 14pt
	line-height 16pt
	font-family 'Panama Regular'
	color #c8c8c8
	.description_inner
		text-align left
		max-width 800px
		margin 0 auto
		padding-top 20px
		padding-bottom 20px


.program_also_blocks
	text-align center
	border-top 0
	border-bottom 0
	border-left 25px
	border-right 25px
	border-color #c8c8c8
	border-style solid
	box-sizing border-box
	.block_item
		margin-top 20px
		margin-bottom 20px
		margin-left 10px
		margin-right 10px
		box-shadow: 0 0 10px rgba(0,0,0,1);
		text-decoration none
		font-family 'Panamatica Regular'
		text-transform uppercase
		font-size 22pt
		line-height 24pt
		background-color black
		color #c8c8c8
		text-align center
		display inline-block
		vertical-align top
		span
			box-sizing border-box
			padding 10px
			width 240px
			height 240px
			background-color black
			text-align center
			display table-cell
			vertical-align middle
			hyphens auto
			&:hover
				background-color #c8c8c8
				color #ff3333


.program_body
	border-top 0
	border-bottom 0
	border-left 25px
	border-right 25px
	border-style solid
	border-color #c8c8c8
	box-sizing border-box
	padding-top 25px
	.program_item
		.program_title
			text-align center
			color #c8c8c8
			background-color black
			font-size 22pt
			line-height 24pt
			font-family 'Panamatica Regular'
			text-transform uppercase
			padding-top 12px
			padding-bottom 10px
			border-top 0
			border-bottom 0
			border-left 25px
			border-right 25px
			margin-left -25px
			margin-right -25px
			border-color #00c641
			border-style solid
			box-sizing border-box
			margin-bottom 30px
		.program_events
			width 100%
			border-top 0
			border-bottom 0
			border-left 25px
			border-right 25px
			border-style solid
			border-color #ff3333
			box-sizing border-box
			.event_item
				color #c8c8c8
				font-size 14pt
				line-height 16pt
				text-decoration none
				.event_cover
					position relative
					.cover_marker
						font-family 'Pragmatica Book'
						color black
						text-transform uppercase
						background-color #ff3333
						position absolute
						padding 5px
						padding-bottom 2px
						right 10px
						top 10px
					.cover_title
					.cover_image
						width 100%
						display block
						border-radius 8px
						background-color black
						box-shadow: 0 0 10px rgba(0,0,0,1);
					.cover_title
						font-family 'Panamatica Regular'
						text-transform uppercase
						font-size 22pt
						line-height 24pt
						text-align center
						padding-top 62px
						padding-bottom 58px
						hyphens auto
				.event_title
					margin-top 15px
					font-family 'Pragmatica Book'
					text-transform uppercase





.program_partners
	text-align center
	font-size 14pt
	line-height 16pt
	font-family 'Panama Regular'
	background-color #c8c8c8
	color #ff3333
	.partners_title
		text-align center
		color #c8c8c8
		background-color #ff3333
		font-size 22pt
		line-height 24pt
		font-family 'Panamatica Regular'
		text-transform uppercase
		padding-top 12px
		padding-bottom 10px
		border-top 0
		border-bottom 0
		border-left 25px
		border-right 25px
		border-color black
		border-style solid
		box-sizing border-box
	.partners_list
		border-top 0
		border-bottom 0
		border-left 25px
		border-right 25px
		border-color #ff3333
		border-style solid
		box-sizing border-box
		.list_inner
			max-width 800px
			margin 0 auto
			text-align center
			.partner_item
				display inline-block
				text-align center
				margin-left 20px
				margin-right 20px
				margin-top 20px
				margin-bottom 20px
				width 25%
				.partner_logo
					width 100%
					padding-top 80%
					background-size contain
					background-position center
					background-repeat no-repeat


.program_also_programs
	.programs_title
		text-align center
		font-family 'Panamatica Regular'
		text-transform uppercase
		font-size 22pt
		line-height 24pt
		padding-top 12px
		padding-bottom 10px
		background-color black
		color #c8c8c8
		border-top 0
		border-bottom 0
		border-left 25px
		border-right 25px
		border-color #00c641
		border-style solid
		box-sizing border-box
	.programs_items
		text-align center
		border-top 0
		border-bottom 0
		border-left 25px
		border-right 25px
		border-color #c8c8c8
		border-style solid
		box-sizing border-box
		.program_item
			border-radius 100%
			margin-top 20px
			margin-bottom 20px
			margin-left 10px
			margin-right 10px
			box-shadow: 0 0 10px rgba(0,0,0,1);
			text-decoration none
			font-family 'Panamatica Regular'
			text-transform uppercase
			font-size 22pt
			line-height 24pt
			background-color black
			color #c8c8c8
			text-align center
			display inline-block
			vertical-align top
			span
				box-sizing border-box
				padding 10px
				padding-top 20px
				width 240px
				height 240px
				border-radius 100%
				background-color black
				text-align center
				display table-cell
				vertical-align middle
				hyphens auto
				&:hover
					background-color #c8c8c8
					color #ff3333


