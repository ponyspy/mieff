.content_block
	margin-top 50px
	background-color #ff3333

.program_main_title
	text-align center
	background-color black
	color #c8c8c8
	font-size 30pt
	line-height 32pt
	font-family 'Panamatica Regular'
	text-transform lowercase
	padding-top 10px
	padding-bottom 10px
	border-top 0
	border-bottom 0
	border-left 25px
	border-right 25px
	border-color #ff3333
	border-style solid
	box-sizing border-box


.programs_list
	border-top 0
	border-bottom 0
	border-left 25px
	border-right 25px
	border-color #c8c8c8
	border-style solid
	box-sizing border-box
	.programs_inner
		max-width 800px
		margin 0 auto
		.program_item
			width 33.333333333%
			display inline-block
			vertical-align top
			font-size 0
			text-decoration none
			box-sizing border-box
			padding 20px
			.program_inner
				padding-top 200%
				box-shadow: 0 0 10px rgba(0,0,0,1);
				border-radius 8px
				background-size cover
				background-position center
				background-repeat no-repeat
				position: relative
				.program_text
					position absolute
					top 0; left 0; right 0; bottom 0
					text-align center
					&:before
						content ''
						height 100%
						display inline-block
						vertical-align middle
					span
						display inline-block
						vertical-align middle
						color #00c641
						text-transform lowercase
						font-size 26pt
						line-height 28pt
						font-family 'Panamatica Regular'



