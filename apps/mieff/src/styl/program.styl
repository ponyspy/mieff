.content_block
	margin-top 50px
	background-color #ff3333


.program_main_title
	text-align center
	color #c8c8c8
	background-color black
	font-size 30pt
	line-height 32pt
	font-family 'Panamatica Regular'
	text-transform lowercase
	padding-top 10px
	padding-bottom 10px
	border-top 0
	border-bottom 0
	border-left 25px
	border-right 25px
	border-color #ff3333
	border-style solid
	box-sizing border-box


.program_cover
	width 100%
	border-top 0
	border-bottom 0
	border-left 25px
	border-right 25px
	border-color #c8c8c8
	border-style solid
	box-sizing border-box
	width 100%
	padding-top 40%
	position relative
	background-size cover
	background-position center
	background-repeat no-repeat


.program_description
	padding-left 25px
	padding-right 25px
	border-top 0
	border-bottom 0
	border-left 25px
	border-right 25px
	border-color #c8c8c8
	border-style solid
	box-sizing border-box
	font-size 14pt
	line-height 16pt
	font-family 'Panama Regular'
	color #c8c8c8
	.description_inner
		text-align left
		max-width 800px
		margin 0 auto
		padding-top 20px
		padding-bottom 20px


.program_also_blocks
	text-align center
	border-top 0
	border-bottom 0
	border-left 25px
	border-right 25px
	border-color #c8c8c8
	border-style solid
	box-sizing border-box
	.block_item
		margin-top 20px
		margin-bottom 20px
		margin-left 10px
		margin-right 10px
		box-shadow: 0 0 10px rgba(0,0,0,1);
		text-decoration none
		font-family 'Panamatica Regular'
		text-transform lowercase
		font-size 30pt
		line-height 32pt
		width 220px
		height 220px
		background-color black
		color #c8c8c8
		text-align center
		display inline-block
		vertical-align top
		hyphens auto
		padding 10px
		box-sizing border-box
		&:hover
			background-color #c8c8c8
			color #ff3333
		&:before
			content ''
			height 100%
			display inline-block
			vertical-align middle
		span
			display inline-block
			vertical-align middle


.program_body
	border-top 0
	border-bottom 0
	border-left 25px
	border-right 25px
	border-color #c8c8c8
	border-style solid
	box-sizing border-box


.program_nanv
	padding 25px
	margin 25px
	margin-top 0
	margin-bottom 0
	background-color black
	color #c8c8c8
	.nav_column
		margin-bottom 10px
		&:last-child
			margin-bottom 0
		.nav_items
			display inline-block
		.nav_all
		.nav_item
			cursor pointer
			margin 10px
			display inline-block
			font-size 14pt
			line-height 16pt
			font-family 'Panama Regular'
			&:hover
			&.active
				color #00c641
		.nav_all
			margin 0
			padding 10px
			color black
			background-color #00c641
			&:hover
				color #c8c8c8
				background-color #ff3333


.program_events
	margin 25px
	margin-bottom 0
	.event_item
		color #c8c8c8
		font-size 14pt
		line-height 16pt
		text-decoration none
		.event_cover
			position relative
			.cover_marker
				font-family 'Pragmatica Book'
				text-transform uppercase
				color black
				background-color red
				position absolute
				padding 5px
				padding-bottom 0
				right 15px
				top 15px
			.cover_title
			.cover_image
				width 100%
				display block
				border-radius 8px
				background-color black
				box-shadow: 0 0 10px rgba(0,0,0,1);
			.cover_title
				font-family 'Panamatica Regular'
				text-transform lowercase
				font-size 22pt
				line-height 24pt
				text-align center
				padding-top 60px
				padding-bottom 60px
			.cover_buy
				border-radius 0 0 8px 8px
				font-family 'Panama Regular'
				text-transform uppercase
				display none
				background-color #00c641
				color black
				text-align center
				box-sizing border-box
				padding 10px
				width 100%
				position absolute
				bottom 0
				cursor pointer
				&:hover
					background-color #c8c8c8
					color #ff3333
		&:hover .cover_buy
			display block
		.event_schedule
			margin-top 15px
			font-family 'Panama Regular'
			display flex
			.schedule_date
				&:after
					display inline-block
					margin-left 5px
					margin-right 5px
					content ' | '
		.event_program
			margin-top 5px
		.event_title
			margin-top 5px
			font-family 'Pragmatica Book'
			text-transform uppercase


.program_also_programs
	.programs_title
		text-align center
		font-family 'Panamatica Regular'
		text-transform lowercase
		font-size 30pt
