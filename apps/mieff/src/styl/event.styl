@media screen and (max-width: 840px)
	@import 'mobile/_event.styl'


.content_block
	background-color #ff3333

.event_main_title
	text-align center
	background-color #c8c8c8
	color #ff3333
	font-size 22pt
	line-height 24pt
	font-family 'Panamatica Regular'
	text-transform uppercase
	padding-top 12px
	padding-bottom 10px
	border-top 0
	border-bottom 0
	border-left 25px
	border-right 25px
	border-color black
	border-style solid
	box-sizing border-box

.event_cover
	width 100%
	.cover_item
		border-top 0
		border-bottom 0
		border-left 25px
		border-right 25px
		border-color #c8c8c8
		border-style solid
		box-sizing border-box
		width 100%
		padding-top 40%
		position relative
		background-size cover
		background-position center
		background-repeat no-repeat

.event_schedule
	.schedule_item
		text-align center
		font-size 14pt
		line-height 16pt
		font-family 'Panama Regular'
		.schedule_meta
			padding-top 5px
			padding-bottom 5px
			background-color black
			color #c8c8c8
			border-top 0
			border-bottom 0
			border-left 25px
			border-right 25px
			border-color #ff3333
			border-style solid
			box-sizing border-box
		.schedule_buy
			padding-top 10px
			padding-bottom 8px
			background-color #00c641
			color black
			border-top 0
			border-bottom 0
			border-left 25px
			border-right 25px
			border-color black
			border-style solid
			box-sizing border-box
			text-transform uppercase
			cursor pointer
			&:hover
				background-color #c8c8c8
				color #ff3333


.event_body
	color #c8c8c8
	background-color #ff3333
	font-size 14pt
	line-height 16pt
	font-family 'Panama Regular'
	padding-top 10px
	padding-bottom 10px
	border-top 0
	border-bottom 0
	border-left 25px
	border-right 25px
	border-color #c8c8c8
	border-style solid
	padding-left 25px
	padding-right 25px
	box-sizing border-box
	.event_video, .event_age, .event_description, .event_intro
		max-width 800px
		margin 0 auto
		padding-top 10px
		padding-bottom 10px
	.event_video
		width 100%
		.video_inner
			position relative
			padding-bottom 56.25% /* 16:9 */
			padding-top 0px
			height 0
			.video
				position absolute
				top 0
				left 0
				width 100%
				height 100%


.event_members
	text-align center
	font-size 14pt
	line-height 16pt
	font-family 'Panama Regular'
	background-color #ff3333
	color #c8c8c8
	.members_group
		overflow hidden
		&:last-child
			margin-bottom 0
		.group_title
			text-align center
			background-color #c8c8c8
			color #ff3333
			font-size 22pt
			line-height 24pt
			font-family 'Panamatica Regular'
			text-transform uppercase
			padding-top 12px
			padding-bottom 10px
			border-top 0
			border-bottom 0
			border-left 25px
			border-right 25px
			border-color black
			border-style solid
			box-sizing border-box
		.group_description
			padding-left 25px
			padding-right 25px
			border-top 0
			border-bottom 0
			border-left 25px
			border-right 25px
			border-color #c8c8c8
			border-style solid
			box-sizing border-box
			.description_inner
				text-align left
				max-width 800px
				margin 0 auto
				padding-top 20px
				padding-bottom 20px
		.group_list
			padding-bottom 20px
			display flex
			justify-content center
			border-top 0
			border-bottom 0
			border-left 25px
			border-right 25px
			border-color #c8c8c8
			border-style solid
			box-sizing border-box
			.list_item
				color #c8c8c8
				text-decoration none
				margin-left 20px
				margin-right 20px
				.item_photo
					box-shadow: 0 0 10px rgba(0,0,0,1);
					margin 0 auto
					width 160px
					height 160px
					border-radius 100%
					background-size cover
					background-position center
					background-repeat no-repeat
				.item_name
					margin-top 20px
					font-size 14pt
					line-height 16pt
					text-transform uppercase
					font-family 'Pragmatica Book'
				.item_roles
					.item_role
						margin-top 5px


.event_partners
	text-align center
	font-size 14pt
	line-height 16pt
	font-family 'Panama Regular'
	background-color #c8c8c8
	color #ff3333
	.partners_title
		text-align center
		color #c8c8c8
		background-color #ff3333
		font-size 22pt
		line-height 24pt
		font-family 'Panamatica Regular'
		text-transform uppercase
		padding-top 12px
		padding-bottom 10px
		border-top 0
		border-bottom 0
		border-left 25px
		border-right 25px
		border-color black
		border-style solid
		box-sizing border-box
	.partners_list
		border-top 0
		border-bottom 0
		border-left 25px
		border-right 25px
		border-color #ff3333
		border-style solid
		box-sizing border-box
		.list_inner
			max-width 800px
			margin 0 auto
			text-align center
			.partner_item
				display inline-block
				text-align center
				margin-left 20px
				margin-right 20px
				margin-top 20px
				margin-bottom 20px
				width 25%
				.partner_logo
					width 100%
					padding-top 80%
					background-size contain
					background-position center
					background-repeat no-repeat


.event_events
	padding-top 40px
	border-top 0
	border-bottom 0
	border-left 25px
	border-right 25px
	border-color #c8c8c8
	border-style solid
	box-sizing border-box
	.event_item
		display block
		max-width 800px
		margin 0 auto
		padding-bottom 40px
		text-decoration none
		.event_title
			color #c8c8c8
			margin-bottom 20px
			text-align center
			font-family 'Panamatica Regular'
			text-transform uppercase
			font-size 22pt
			line-height 24pt
		.event_poster
			box-shadow: 0 0 10px rgba(0,0,0,1);
			border-radius 8px
			display block
			width 100%


.event_also_blocks
	.blocks_title
		text-align center
		font-family 'Panamatica Regular'
		text-transform uppercase
		font-size 22pt
		line-height 24pt
		padding-top 12px
		padding-bottom 10px
		background-color black
		color #c8c8c8
		border-top 0
		border-bottom 0
		border-left 25px
		border-right 25px
		border-color #00c641
		border-style solid
		box-sizing border-box
	.blocks_items
		text-align center
		border-top 0
		border-bottom 0
		border-left 25px
		border-right 25px
		border-color #c8c8c8
		border-style solid
		box-sizing border-box
		.block_item
			margin-top 20px
			margin-bottom 20px
			margin-left 10px
			margin-right 10px
			box-shadow: 0 0 10px rgba(0,0,0,1);
			text-decoration none
			font-family 'Panamatica Regular'
			text-transform uppercase
			font-size 22pt
			line-height 24pt
			background-color black
			color #c8c8c8
			text-align center
			display inline-block
			vertical-align top
			span
				box-sizing border-box
				padding 10px
				padding-top 20px
				width 240px
				height 240px
				background-color black
				font-size 30px
				text-align center
				display table-cell
				vertical-align middle
				hyphens auto
				&:hover
					background-color #c8c8c8
					color #ff3333

