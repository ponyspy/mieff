extends layout

block header_meta
	- var content_title= 'MIEFF | ' + __('Партнеры')
	- var content_description= ''

block header_include
	- var include_css = ['partners.css']
	//- - var include_js = ['partners.js']


block content
	.partners_types
		each p_type in types
			.partner_type
				.type_title= __n(p_type.type, p_type.partners.length == 1 ? 1 : 5)
				.type_list: .list_inner
					each partner in p_type.partners
						a.partner_item(href=partner.link, target='_blank', rel='nofollow')
							img.partner_logo(src=partner.logo)