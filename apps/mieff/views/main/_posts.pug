each post, i in posts
	a.post_item(class='year_' + moment(post.date).format('YYYY'), href='/news/' + (post.sym ? post.sym : post._short_id)): .post_inner
		if post.poster
			.post_poster(style='background-image: url(' + post.poster + ')')
		else
			.post_title= post.i18n.title.get(locale)
		.post_desc
			.post_date= moment(post.date).locale(locale).format('DD.MM.YYYY')
			.post_s_title= post.i18n.s_title.get(locale)