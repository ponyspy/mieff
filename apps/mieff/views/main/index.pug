extends layout

block header_meta
	- var content_title= __('MIEFF')
	- var content_description= ''
	- var content_images = ''

block header_include
	//- - var include_libs_css = ['']
	- var include_css = ['main.css']
	- var include_libs_js = ['macy.js']
	- var include_js = ['main.js']


block content
	.widget_block: .widget_inner

	.video_block
		img(src='/stuff/mieff/logo/mieff.svg')

	.news_block

	.program_block
		.program_title= __('Программа')

		.program_nanv
			.nav_column.date
				.nav_item.all= __('Все')
				each date in dates
					.nav_item(data-date=date.day + '-' + date.month + '-' + date.year)= date.day + '.' + date.month
			.nav_column.program
				.nav_item.all= __('Все')
				each program in programs
					.nav_item(class=program._id.toString())= program.i18n.title.get(locale)
			.nav_column.type
				.nav_item.all= __('Все')
				each type_item in static_types.events_types
					.nav_item(class=type_item)= __(type_item)
			.nav_column.place
				.nav_item.all= __('Все')
				each place in places
					.nav_item(class=place._id.toString())= place.i18n.title.get(locale)

		.program_events

